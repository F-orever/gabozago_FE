{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      //"@_apis/*": ["src/api/*"],
      "@_types/*": ["./src/assets/types/*"],
      "@_icons/*": ["./src/assets/icons/*"],
      "@_imgs/*": ["./src/assets/imgs/*"],
      "@_common/*": ["./src/components/common/*"],
      "@_recoil/*": ["./src/recoil/*"],
      "@_utils/*": ["./src/utils/*"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
  },
  "include": [".eslintrc.cjs", "src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
